{
  "name": "snaplink",
  "version": "1.0.0",
  "description": "A responsive SnapLink URL shortener",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client-next\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "client-next": "cd client-next && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client-next && npm install && npm run build"
  },
  "keywords": [
    "url-shortener",
    "bitly-clone",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}